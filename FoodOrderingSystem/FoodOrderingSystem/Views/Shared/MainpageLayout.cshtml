<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WOWFOOD</title>
    <!-- Link our CSS file -->
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link rel="stylesheet" href="~/Content/fontawesome-free-5.15.2-web/css/all.css" />
</head>
<body>

    <!-- Navbar Section Starts Here -->
    <section class="navbar">
        <div class="container">
            <div>
                <div class="flex-box">
                    <div class="logo">
                        <a href="@Url.Action("Index","Mainpage")" title="Logo">
                            <img src="~/Content/images/logo.png" alt="Restaurant Logo" class="img-responsive">
                        </a>
                    </div>
                    <div class="menu text-center" style=" width:60%">
                        <ul>
                            <li>
                                <a href="@Url.Action("Index","Mainpage")">Home</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Categories","Mainpage")">Categories</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Foods","Mainpage")">Foods</a>
                            </li>
                            <li>
                                <a href="@Url.Action("addtocart","Mainpage")">View Cart<span class="fas fa-shopping-cart"></span></a>
                            </li>
                            <li style="border:none;">
                                <a href="@Url.Action("maincontact","Mainpage")">Contact</a>
                            </li>
                        </ul>
                    </div>
                    <div class="profile-page" style="width:5%;">
                        <div class="profile-pic" style="width:90%;">
                            <a href="@Url.Action("UserProfile","Mainpage")"><img src="~/Content/LoginFile/images/avatars/useravatar.png" class="profile-responsive" /></a>
                        </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
            </div>


            <div class="clearfix"></div>
        </div>
    </section>
    <!-- Navbar Section Ends Here -->
    <div class="container body-content">
        @RenderBody()

    </div>

</body>
</html>
